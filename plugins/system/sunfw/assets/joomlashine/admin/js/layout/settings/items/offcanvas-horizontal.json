{
	"class":"offcanvas-settings",
	"title":"offcanvas-settings",
	"rows":[
		{
			"cols":[
				{
					"class":"col-xs-12",
					"controls":{
						"height":{
							"type":"slider",
							"label":"height",
							"default":300,
							"max":500,
							"min":50,
							"suffix":"px"
						}
					}
				}
			]
		},
		{
			"cols":[
				{
					"class":"col-xs-12",
					"controls":{
						"padding":{
							"type":"spacing-settings",
							"label":"padding"
						}
					}
				}
			]
		},
		{
			"cols":[
				{
					"class":"col-xs-12",
					"controls":{
						"anchor-position":{
							"type":"select",
							"label":"toggle-position",
							"value":"center",
							"options":[
								{
									"label":"left",
									"value":"left"
								},
								{
									"label":"center",
									"value":"center"
								},
								{
									"label":"right",
									"value":"right"
								}
							]
						}
					}
				},
				{
					"class":"col-xs-12",
					"controls":{
						"effect":{
							"type":"select",
							"label":"effect",
							"options":[
								{
									"value":"effect-top-push",
									"label":"push"
								},
								{
									"value":"effect-top-slide",
									"label":"slide"
								}
							]
						}
					}
				}
			]
		},
		{
			"class":"separator-before",
			"cols":[
				{
					"class":"col-xs-12",
					"controls":{
						"class-prefix":{
							"type":"text",
							"label":"custom-classes"
						}
					}
				}
			]
		},
		{
			"class":"separator-before",
			"cols":[
				{
					"class":"col-xs-12 display-in-layout",
					"controls":{
						"visible_in":{
							"type":"checkbox",
							"check-none":false,
							"label":"Display in layouts",
							"options":[
								{
									"value":"lg",
									"label":"Desktop"
								},
								{
									"value":"md",
									"label":"Laptop"
								},
								{
									"value":"sm",
									"label":"Tablet"
								},
								{
									"value":"xs",
									"label":"Smartphone"
								}
							],
							"default":[
								"lg",
								"md",
								"sm",
								"xs"
							]
						}
					}
				}
			]
		}
	],
	"hidden-in-panel":true
}
