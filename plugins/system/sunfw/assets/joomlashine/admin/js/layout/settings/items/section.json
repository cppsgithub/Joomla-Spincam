{
	"class":"section-settings",
	"title":"section-settings",
	"rows":[
		{
			"class":"separator-after",
			"cols":[
				{
					"class":"col-xs-12",
					"controls":{
						"name":{
							"type":"text",
							"hint":"layout-section-name-hint",
							"label":"name"
						}
					}
				}
			]
		},
		{
			"class":"separator-after",
			"cols":[
				{
					"class":"col-xs-12",
					"controls":{
						"full_width":{
							"type":"checkbox",
							"label":"enable-full-width",
							"hint":"layout-section-enable-full-width-hint",
							"value":1,
							"default":1
						}
					}
				},
				{
					"class":"col-xs-12",
					"controls":{
						"enable_sticky":{
							"type":"checkbox",
							"label":"enable-sticky",
							"hint":"layout-section-enable-sticky-hint",
							"value":1,
							"default":0
						}
					}
				}
			]
		},
		{
			"cols":[
				{
					"class":"col-xs-12",
					"controls":{
						"margin":{
							"type":"spacing-settings",
							"hint":"layout-section-margin-hint",
							"label":"margin"
						}
					}
				},
				{
					"class":"col-xs-12",
					"controls":{
						"padding":{
							"type":"spacing-settings",
							"hint":"layout-section-padding-hint",
							"label":"padding"
						}
					}
				}
			]
		},
		{
			"class":"separator-before",
			"cols":[
				{
					"class":"col-xs-12",
					"controls":{
						"class":{
							"type":"text",
							"hint":"layout-section-custom-classes-hint",
							"label":"custom-classes"
						}
					}
				}
			]
		}
	],
	"hidden-in-panel":true
}
