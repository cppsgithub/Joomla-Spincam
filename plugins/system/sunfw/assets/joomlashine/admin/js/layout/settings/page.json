{
	"class":"page-settings",
	"title":"Page Settings",
	"rows":[
		{
			"cols":[
				{
					"class":"col-xs-12",
					"controls":{
						"enable_responsive":{
							"type":"checkbox",
							"label":"enable-responsive",
							"value":1,
							"hint":"enable-responsive-hint",
							"default":1
						}
					}
				}
			]
		},
		{
			"cols":[
				{
					"class":"col-xs-12",
					"controls":{
						"show_desktop_switcher":{
							"type":"checkbox",
							"label":"desktop-switcher",
							"value":1,
							"hint":"show-desktop-switcher-hint",
							"default":1
						}
					}
				}
			]
		},
		{
			"cols":[
				{
					"class":"col-xs-12",
					"controls":{
						"enable_boxed_layout":{
							"type":"checkbox",
							"label":"boxed-layout",
							"value":1,
							"hint":"enable-boxed-layout-hint",
							"default":0
						}
					}
				}
			]
		},
		{
			"cols":[
				{
					"class":"col-xs-12",
					"controls":{
						"width_boxed_layout":{
							"type":"boxed-layout",
							"label":"boxed-layout-width",
							"suffix":"px",
							"default":960
						}
					}
				}
			],
			"requires":{
				"enable_boxed_layout":1
			}
		},
		{
			"class":"separator-after",
			"cols":[
				{
					"class":"col-xs-12",
					"controls":{
						"margin":{
							"type":"spacing-settings",
							"label":"margin",
							"hint":"margin-hint",
							"suffix":"px"
						}
					}
				}
			]
		},
		{
			"cols":[
				{
					"class":"col-xs-12",
					"controls":{
						"go_to_top":{
							"type":"checkbox",
							"label":"show-go-to-top",
							"hint":"show-go-to-top-hint",
							"value":1,
							"default":0
						}
					}
				}
			]
		},
		{
			"cols":[
				{
					"class":"col-xs-12 settingIcon-go-top",
					"controls":{
						"icon_go_to_top":{
							"type":"radio",
							"label":"icon",
							"hint":"go-to-top-icon-hint",
							"inline":true,
							"options":[
								{
									"class":"hidden",
									"label":"<i class='fa fa-arrow-circle-o-up fa-2x'></i>",
									"value":"fa fa-arrow-circle-o-up"
								},
								{
									"class":"hidden",
									"label":"<i class='fa fa-arrow-up fa-2x'></i>",
									"value":"fa fa-arrow-up"
								},
								{
									"class":"hidden",
									"label":"<i class='fa fa-long-arrow-up fa-2x'></i>",
									"value":"fa-long-arrow-up"
								},
								{
									"class":"hidden",
									"label":"<i class='fa fa-ban fa-2x'></i>",
									"value":"fa-ban"
								}
							],
							"default":"fa-ban"
						}
					}
				},
				{
					"class":"col-xs-12",
					"controls":{
						"text_go_to_top":{
							"type":"text",
							"label":"text",
							"hint":"go-to-top-text-hint",
							"default":"Go to top"
						}
					}
				},
				{
					"class":"col-xs-12",
					"controls":{
						"color_go_to_top":{
							"type":"color-picker",
							"hint":"go-to-top-text-color-hint",
							"label":"text-color"
						}
					}
				},
				{
					"class":"col-xs-12",
					"controls":{
						"bg_go_to_top":{
							"type":"color-picker",
							"hint":"go-to-top-background-color-hint",
							"label":"background-color"
						}
					}
				},
				{
					"class":"col-xs-12",
					"controls":{
						"ps_go_to_top":{
							"type":"select",
							"label":"positions",
							"hint":"go-to-top-position-hint",
							"options":[
								{
									"label":"right",
									"value":"right"
								},
								{
									"label":"center",
									"value":"center"
								},
								{
									"label":"left",
									"value":"left"
								}
							]
						}
					}
				}
			],
			"requires":{
				"go_to_top":1
			}
		}
	]
}
