{
	"class":"system-setting",
	"rows":[
		{
			"cols":[
				{
					"class":"col-xs-4",
					"rows":[
						{
							"title":"icons",
							"cols":[
								{
									"class":"col-xs-12",
									"controls":{
										"sunfwfavicon":{
											"type":"choose-image",
											"label":"fav-icon",
											"hint":"fav-icon-hint"
										}
									}
								}
							]
						},
						{
							"title":"assets-compression",
							"cols":[
								{
									"class":"col-xs-6",
									"controls":{
										"compression":{
											"type":"checkbox",
											"label":"compression-target",
											"hint":"compression-target-hint",
											"inline":true,
											"options":[
												{
													"value":"css",
													"label":"compress-css"
												},
												{
													"value":"js",
													"label":"compress-js"
												}
											]
										}
									}
								},
								{
									"class":"col-xs-6",
									"controls":{
										"maxCompressionSize":{
											"type":"text",
											"label":"max-compression-size",
											"hint":"max-compression-size-hint",
											"suffix":"KB",
											"default":100
										}
									}
								},
								{
									"class":"col-xs-12",
									"controls":{
										"cacheDirectory":{
											"type":"text",
											"label":"cache-directory",
											"hint":"cache-directory-hint",
											"suffix":"verify"
										}
									}
								},
								{
									"class":"col-xs-12",
									"controls":{
										"compressionExclude":{
											"type":"textarea",
											"rows":9,
											"label":"exclude-from-compression",
											"hint":"exclude-from-compression-hint"
										}
									}
								}
							]
						}
					]
				},
				{
					"title":"custom-code",
					"class":"col-xs-4",
					"controls":{
						"customBeforeEndingHeadTag":{
							"type":"textarea",
							"rows":9,
							"label":"at-end-of-head-tag",
							"hint":"at-end-of-head-tag-hint"
						},
						"customBeforeEndingBodyTag":{
							"type":"textarea",
							"rows":9,
							"label":"at-end-of-body-tag",
							"hint":"at-end-of-body-tag-hint"
						}
					}
				},
				{
					"title":"custom-files",
					"class":"col-xs-4",
					"controls":{
						"customCSSFiles":{
							"type":"textarea",
							"rows":9,
							"label":"custom-css-files",
							"hint":"custom-css-files-hint"
						},
						"customJSFiles":{
							"type":"textarea",
							"rows":9,
							"label":"custom-js-files",
							"hint":"custom-js-files-hint"
						}
					}
				}
			]
		}
	],
	"controls":{
		"niche-style":{
			"type":"hidden"
		}
	}
}
