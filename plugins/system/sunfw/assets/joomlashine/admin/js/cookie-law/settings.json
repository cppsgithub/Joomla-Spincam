{
	"class":"cookie-law-setting",
	"title":"cookie-law-settings",
	"rows":[
		{
			"cols":[
				{
					"class":"col-xs-12",
					"controls":{
						"enabled":{
							"type":"checkbox",
							"value":1,
							"hint":"megamenu-cookie-law-enable-cookie-consent-hint",
							"label":"enable-cookie-consent"
						}
					}
				}
			]
		},
		{
			"cols":[
				{
					"class":"col-xs-12",
					"controls":{
						"style":{
							"label":"style",
							"hint":"megamenu-cookie-law-style-hint",
							"type":"select",
							"options":[
								{
									"label":"light",
									"value":"light"
								},
								{
									"label":"dark",
									"value":"dark"
								}
							]
						}
					}
				},
				{
					"class":"col-xs-12",
					"controls":{
						"banner-placement":{
							"label":"banner-placement",
							"hint":"megamenu-cookie-law-banner-placement-hint",
							"type":"select",
							"options":[
								{
									"label":"top",
									"value":"top"
								},
								{
									"label":"bottom",
									"value":"bottom"
								},
								{
									"label":"floating-right",
									"value":"floating"
								},
								{
									"label":"floating-left",
									"value":"floating-left"
								}
							]
						}
					}
				},
				{
					"class":"col-xs-12",
					"controls":{
						"message_type":{
							"label":"message",
							"hint":"megamenu-cookie-law-message-hint",
							"type":"select",
							"default":"text",
							"options":[
								{
									"label":"text",
									"value":"text"
								},
								{
									"label":"article",
									"value":"article"
								}
							]
						}
					}
				},
				{
					"class":"col-xs-12",
					"controls":{
						"message":{
							"label":"",
							"type":"textarea",
							"rows":5,
							"default":"This website uses cookies to ensure you get the best experience on our website."
						}
					},
					"requires":{
						"message_type":"text"
					}
				},
				{
					"class":"col-xs-12",
					"controls":{
						"article":{
							"label":"",
							"type":"article-picker"
						}
					},
					"requires":{
						"message_type":"article"
					}
				},
				{
					"class":"col-xs-12",
					"controls":{
						"accept-button-text":{
							"label":"accept-button-text",
							"hint":"megamenu-cookie-law-accept-button-text-hint",
							"type":"text",
							"default":"Got It!"
						}
					}
				},
				{
					"class":"col-xs-12",
					"controls":{
						"read-more-button-text":{
							"label":"read-more-button-text",
							"hint":"megamenu-cookie-law-read-more-button-text-hint",
							"type":"text",
							"default":"More information"
						}
					}
				},
				{
					"class":"col-xs-12",
					"controls":{
						"cookie-policy-link":{
							"label":"cookie-policy-link",
							"hint":"megamenu-cookie-law-cookie-policy-link-hint",
							"type":"text",
							"placeholder":"http://"
						}
					},
					"requires":{
						"message_type":"text"
					}
				}
			],
			"requires":{
				"enabled":1
			}
		}
	]
}
