{
	"class": "module-settings",
	"rows": [
		{
			"class": "separator-after",
			"cols": [
				{
					"class": "col-xs-12",
					"controls": {
						"padding": {
							"type": "spacing-settings",
							"hint":"style-module-padding-hint",
							"label": "padding"
						}
					}
				}
			]
		},
		{
			"cols": [
				{
					"class": "col-xs-12",
					"controls": {
						"background-color": {
							"type": "color-picker",
							"hint":"style-module-background-color-hint",
							"label": "background-color"
						}
					}
				},
				{
					"class": "col-xs-12",
					"controls": {
						"background-image": {
							"type": "choose-image",
							"hint":"style-module-background-image-hint",
							"label": "background-image"
						}
					}
				},
				{
					"class": "col-xs-12",
					"controls": {
						"background-image-settings": {
							"type": "background-image-settings",
							"hint":"style-module-background-image-settings-hint",
							"label": "background-image-settings"
						}
					},
					"requires": {
						"background-image": [ "!=", "" ]
					}
				},
				{
					"class": "col-xs-12",
					"controls": {
						"border": {
							"type": "border-settings",
							"hint":"style-module-border-hint",
							"label": "border"
						}
					}
				}
			]
		}
	]
}
